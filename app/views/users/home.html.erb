<div class="row">
	<div class="span3" >
		<%= render partial: 'user', locals: { user: @current_user } %>
	</div><!-- current_user -->

	<div class="span9">
		
		<h3> <%= link_to 'Accpeted Activities', activities_accepted_path %> </h3>
		<% if !@accepted.empty? %>
		<%= render :partial => 'table_user_activities', locals: {user_activities: @accepted} %>
		<% else %>
		<p class="lead">No accepted activities</p>
		<% end %>

		<h3> <%= link_to ' Activities Completed', activities_completed_path %> </h3>
		<% if !@completed.empty? %>
		<%= render :partial => 'table_user_activities', locals: {user_activities: @completed} %>
		<% else %>
		<p class="lead">No completed activities</p>
		<% end %>

	</div>

</div>






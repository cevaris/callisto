<h1 class="center"><%= t 'signup.title' %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { object: @user } %>

      <div class="row">
      	<div class="span3">
      		<%= f.label :first_name, 'First Name' %>
		      <%= f.text_field :first_name %>
      	</div>
      	<div class="span3">
      		<%= f.label :last_name, 'Last Name' %>
		      <%= f.text_field :last_name %>
      	</div>
      </div>

      <%= f.label :email, t('signup.email_label') %>
      <%= f.text_field :email %>

      <%= f.label :password, t('signup.pwd_label') %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t('signup.pwdconf_label') %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t('signup.button'), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

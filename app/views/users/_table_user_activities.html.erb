<table class="table table-hover table-condensed">
  <tr>
    <th>Name</th>
    <th>User</th>
  </tr>

<% @user_activities.each do |user_activity| %>
  <tr>
    <td><%= link_to "#{user_activity.activity.name.titlecase}", activity_user_activity_path(user_activity.activity, user_activity) %></td>
    <td><%= link_to "#{user_activity.user.name.titlecase}", user_path(user_activity.user) %></td>
  </tr>
<% end %>
</table>
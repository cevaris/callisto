<table class="table table-hover table-condensed">
	<thead>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
	<% user_activities.each do |user_activity| %>
		<% if user_activity.can_view? @current_user  %>
		<tr>
	    <td width="60%"><%= link_to truncate("#{user_activity.activity.name.titlecase}", length: 40), activity_user_activity_path(user_activity.activity, user_activity) %></td>
	    <td width="30%"><%= link_to truncate("#{user_activity.user.name.titlecase}", length: 40), user_path(user_activity.user) %></td>
	    <td width="10%"><%= "#{user_activity.activity_state.name.titlecase}" %></td>
	  </tr>
	  <% end %>
	<% end %>
	</tbody>
</table>

<div class="row">
	<div class="span3" >
		<%= render partial: 'users/user', locals: { user: @current_user } %>
	</div><!-- user -->

	<div class="span9">
		<h3>Pending Friend Requests</h3>
		<% if !@pending_requests.empty? %>
		<%= render :partial => 'users/table_friend_requests', locals: {friend_requests: @pending_requests} %>
		<% else %>
		<p class="lead">No pending friend requests</p>
		<% end %>
	</div>

</div>
